<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.emu.agentgo" version="1.0.0" versionCode="2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Scoop</name>
  <description>
        Meet an agent who has the scoop!
  </description>
  <author email="info@ownerstation.com" href="http://www.ownerstation.com">
      Scoop Team
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="SplashScreen" value="screen" />
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>

  <platform name="ios">
          <!-- iOS 7.0+ -->
          <!-- iPhone / iPod Touch  -->
          <icon src="www/res/icon/ios7/Icon-60.png" width="60" height="60" />
          <icon src="www/res/icon/ios7/Icon-60@2x.png" width="120" height="120" />
          <!-- iPad -->
          <icon src="www/res/icon/ios7/Icon-76.png" width="76" height="76" />
          <icon src="www/res/icon/ios7/Icon-76@2x.png" width="152" height="152" />
          <!-- iOS 6.1 -->
          <!-- Spotlight Icon -->
          <icon src="www/res/icon/ios7/Icon-40.png" width="40" height="40" />
          <icon src="www/res/icon/ios7/Icon-40@2x.png" width="80" height="80" />
          <!-- iPhone / iPod Touch -->
          <icon src="www/res/icon/ios/Icon.png" width="57" height="57" />
          <icon src="www/res/icon/ios/Icon@2x.png" width="114" height="114" />
          <!-- iPad -->
          <icon src="www/res/icon/ios/Icon-72.png" width="72" height="72" />
          <icon src="www/res/icon/ios/Icon-72@2x.png" width="144" height="144" />
          <!-- iPhone Spotlight and Settings Icon -->
          <icon src="www/res/icon/ios/Icon-Small.png" width="29" height="29" />
          <icon src="www/res/icon/ios/Icon-Small@2x.png" width="58" height="58" />
          <!-- iPad Spotlight and Settings Icon -->
          <icon src="www/res/icon/ios/Icon-Small-50.png" width="50" height="50" />
          <icon src="www/res/icon/ios/Icon-Small-50@2x.png" width="100" height="100" />

          <splash src="www/res/screen/ios/screen-640x1136.png" width="640" height="1136" />
          <splash src="www/res/screen/ios/screen-640x960.png" width="640" height="960" />
          <splash src="www/res/screen/ios/screen-320x480.png" width="320" height="480" />

  </platform>
  <platform name="android">
            <icon src="www/res/icon/android/drawable-ldpi/ic_launcher.png" density="ldpi" />
            <icon src="www/res/icon/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
            <icon src="www/res/icon/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
            <icon src="www/res/icon/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />

            <splash src="www/res/screen/android/screen-720x1280.9.png" density="xhdpi" />
            <splash src="www/res/screen/android/screen-480x800.9.png" density="hdpi" />
            <splash src="www/res/screen/android/screen-320x480.9.png" density="mdpi" />
            <splash src="www/res/screen/android/screen-200x320.9.png" density="ldpi" />

   </platform>


  
</widget>